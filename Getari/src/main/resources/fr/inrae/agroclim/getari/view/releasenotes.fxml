<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="600" prefWidth="600.0" styleClass="application" xmlns="http://javafx.com/javafx/8.0.20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.inrae.agroclim.getari.controller.MarkdownDisplayController">
    <center>
        <VBox alignment="TOP_RIGHT" prefHeight="600.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <WebView fx:id="webView" prefHeight="600.0" prefWidth="600.0" />
                <Button fx:id="close" cancelButton="true" defaultButton="true" onAction="#onCloseAction" text="%action.close" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
